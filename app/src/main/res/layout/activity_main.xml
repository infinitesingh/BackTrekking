<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <Button
            android:id="@+id/start_trek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Start Trekking"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:onClick="startUpdatesButtonHandler"/>

        <Button
            android:id="@+id/stop_trek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Stop Trekking"
            android:textSize="25sp"
            android:layout_weight="0.5"
            android:onClick="stopUpdatesButtonHandler"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/start_stop">

        <Button
            android:id="@+id/reset_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Reset  "
            android:textSize="25sp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/back_trek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Back Trek"
            android:textAllCaps="false"
            android:textSize="25sp"/>

    </LinearLayout>

</RelativeLayout>